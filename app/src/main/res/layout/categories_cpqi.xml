<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/maroon"
        >


        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            />


        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPSI Audit"
            android:textSize="27sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_horiz_24"
            android:padding="8dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/textInputLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp">

        <!-- Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- CWS Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cwsNameInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CWS Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cwsNameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/todaysDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="8dp"
        android:text="Date: " />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@id/textInputLayoutContainer"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_ring" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progressBar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#F9EAEA"
        android:columnCount="2"
        android:padding="8dp"
        android:rowCount="2">

        <!-- Box 1 -->
        <LinearLayout
            android:id="@+id/box1Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showCustomPopupMenu"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:indeterminate="true"
                        android:indeterminateDrawable="@drawable/progress_ring" />

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="65dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="icon1"
                        android:src="@drawable/baseline_menu_book_24" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/name1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon1"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Bookkeeping and Financial Management"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Box 2 -->
        <LinearLayout
            android:id="@+id/box2Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showCustomPopupMenu"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:indeterminate="true"
                        android:indeterminateDrawable="@drawable/progress_ring" />

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="65dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="icon2"
                        android:src="@drawable/baseline_blinds_closed_24" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/name2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon2"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="25dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Social and environmental standards"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </GridLayout>
</RelativeLayout>
