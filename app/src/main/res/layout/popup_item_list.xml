<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/popUpTextNumbering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@drawable/border_radius"
            android:layout_marginEnd="10dp"
            android:padding="15dp" />
        <TextView
            android:id="@+id/popUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_txt"
            android:layout_toEndOf="@id/popUpTextNumbering"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <!-- Button group for Question 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/yesButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/yes_txt"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:background="@drawable/border_green"
            android:layout_marginEnd="8dp"
            style="?android:attr/buttonBarButtonStyle" />


        <Button
            android:id="@+id/noButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/no_txt"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:background="@drawable/border_maroon"
            android:layout_marginStart="8dp"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/ignoreButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/skip"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:background="@drawable/border_grey"
            android:layout_marginStart="14dp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>
